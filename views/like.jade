extends layout

block content
    div(class="container" style="margin-top:20px")
        div(class="row")
            if like
                each val in like
                    div(style="height:270px;width:210px;padding:5px;background-color:#ccc;float:left")
                        a(href="/"+val.login+"")
                            if val.photo
                                img(src="../"+val.photo width="200" height="200" class="images" style="padding:10px;")
                            else
                                img(src="../images/profile.jpg" width="200" height="200" class="images" style="padding:10px;")
                            p(style="padding:5px;")= "Vous avez eu un like avec " + val.login + " le "+ val.date.substr(0,10) + " Ã  "+ val.date.substr(11,8)
            else
                p.jumbotron
                    != '<strong style="font-size:30px;font-weight: 300;color:#333;">Vous n\'avez pas encore de like.</strong>'
block scripts
